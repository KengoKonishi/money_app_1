<%= render partial: 'layouts/header' %>
<div class="mypage_container">
 <h1 class="welcomeuser">ようこそ<%= current_user.username %>さん</h1>
 <div class="menu_container">
   <div class="menu_box">
   <h2 class="menu_title">Infomation</h2>
     <div class = "menulist">
      
      <div class="card text-center">
        <div class="card-header">
          記録しよう
        </div>
        <div class="card-body">
            
              <%= link_to new_income_record_path, class: 'btn btn-primary'  do %>
                <i class="fas fa-sign-in-alt"></i> 
                <span>収入登録</span>
              <% end %> 
            
          
              <%= link_to new_expense_record_path, class: 'btn btn-success'  do %>
                <i class="fas fa-sign-out-alt"></i> 
                <span>支出登録</span>
              <% end %>
            

            <div class="mypage btn-group">
              <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-plus-circle"></i> カテゴリの追加
              </button>
              <div class="dropdown-menu">
                <%= link_to "収入カテゴリの追加", new_original_income_category_path, class:"dropdown-item" %>
                <%= link_to "支出カテゴリの追加", new_original_expense_category_path, class:"dropdown-item" %>
              </div>
            </div>
        </div>
      </div>
 
       <div class="card text-center">
        <div class="card-header">
          記録結果を見よう
        </div>
        <div class="card-body">
          <p><%= link_to "カレンダー", simple_calendar_top_path %></p>
          <p><%= link_to "今月のレポート", reports_result_path %></p>
        </div>
      </div>

       <div class="card text-center">
        <div class="card-header">
          その他
        </div>
        <div class="card-body">
          <a href="https://b35d31f38bf146ceab70f1bfc3b4f541.vfs.cloud9.us-east-2.amazonaws.com/simulations/new">    
             <button type="button" class="btn btn-info"><i class="fas fa-chart-line"></i> </button>
          </a>
         <%= link_to simulations_new_path, class: 'btn btn-info'  do %>
                <i class="fas fa-chart-line"></i>
                <span>資産運用シミュレーション</span>
         <% end %> 
        </div>
      </div>

     </div>
   </div>
 </div>
</div>
<%= render partial: 'layouts/footer' %>