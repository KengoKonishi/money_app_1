<h1>オリジナル項目の支出一覧</h1>

<% @original_expense_records.each do |original_expense_record| %>
  <%= original_expense_record.registerdate %>
  <%= original_expense_record.money %>円
  <%= original_expense_record.memo %>
  <%= original_expense_record.original_expense_category.name %>
  
  <%= link_to "Show", original_expense_record_path(original_expense_record) %>
  <%= link_to "Edit", edit_original_expense_record_path(original_expense_record) %>
  <%= link_to "Delete", original_expense_record_path(original_expense_record), method: :delete, data: { confirm: 'Are you sure?' } %>
  <br>
<% end %>