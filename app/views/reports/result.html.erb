  <div class="card report-result">
    <h5 class="card-header">収入</h5>
      <div class="card-body report-result">
        <h5 class="card-title"></h5>

         <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">カテゴリ</th>
                <th scope="col">金額</th>
                <th scope="col">確認</th>
              </tr>
            </thead>
            <tbody>
                 <% @b_i_rs.each do |b_i_r| %>
                 <tr>
                    <td><%= b_i_r.basic_income_category.name %></td>
                    <td><%= b_i_r.sum_money %>円</td>
                    <td><a href="#">Go!</a></td>
                 </tr>
            　　　 <% end %>
                 <% @o_i_rs.each do |o_i_r| %>
                 <tr>
                    <td><%= o_i_r.original_income_category.name %></td>
                    <td><%= o_i_r.sum_money %>円</td>
                    <td><a href="#">Go!</a></td>
                 </tr>
                <% end %>
                </tr>
            </tbody>
         </table>
      
      </div>
 </div>


  <div class="card report-result">
