<h1>BasicIncomeRecord#new</h1>

<%= form_with model: @basic_income_record do |f| %>
  <p>
    <%= label_tag :date, '日付：' %>
    <%= f.date_field :date %>
  </p>
  
  <p>
    <%= label_tag :money, '金額：' %>
    <%= f.number_field :money %>
  </p>
  
  <p>
    <%= label_tag :memo, 'MEMO：' %>
    <%= f.text_field :memo %>
  </p>
  
  <P>
    <%= label_tag :category_id, '収入科目：' %>
    <%= BasicIncomeCategory.all.each do |option| %>
      <%= radio_button_tag :category_id, option.id, option.id.to_s == @basic_income_category_id %>
      <%= label_tag "basic_income_category_id_#{option.id}",option.name %>
    <% end %>
  </P>
  
  <%= f.submit "Create" %>
<% end %>